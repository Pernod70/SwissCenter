<?xml version="1.0"?>
<configuration>
  <startup>
    <supportedRuntime version="v2.0.50727" sku="Client"/>
  </startup>

  <appSettings>
    <!-- Put these in as needed to override the defaults if your ini files are in different places -->
    <!--
    <add key="SimeseIniPath" value="" />
    <add key="SwissCenterIniPath" value="" />
    -->
    
    <!--<add key="NotificationUri" value="" />-->
    <!--<add key="SwissCenterConnectionString" value="" />-->
    
    <!-- Specify this as a default port in case the Simese.ini file cannot be found -->
    <!--<add key="SimesePort" value="53829"/>-->

    <!-- ms -->
    <add key="NotificationCheckInterval" value="10000" />
    
    <add key="MaxRetries" value="2" />
    
    <!-- hours:mins:secs 2 digit left 0 padded-->
    <add key="RetryPeriod" value="00:01:00" />

    <!-- hours:mins:secs 2 digit left 0 padded-->
    <add key="DatabaseConnectionRetryPeriod" value="00:05:00" />

    <!-- This setting is used for debugging without a database only -->
    <!--<add key="LocationProviderType" value="Swiss.Monitor.StubLocations, SwissMonitor"/>-->
  </appSettings>
  
  <system.diagnostics>
    <trace autoflush="true" />

    <sources>
      <source name="Swiss.Monitor" switchValue="ActivityTracing, Warning">
        <listeners>
          <add name="Logfile" />
          <remove name="Default" />
        </listeners>
      </source>
    </sources>

    <sharedListeners>
      <add name="Logfile" type="System.Diagnostics.TextWriterTraceListener" initializeData="swissmonitor.log"
           traceOutputOptions="DateTime"/>
    </sharedListeners>
  </system.diagnostics>
</configuration>
